.container
  .row.col-md-6.col-sm-6.col-md-offset-2.col-sm-offset-2
    %h2.text-center
      = t('.new_user')
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render partial: 'the_notification/form', locals: { object: resource }
      .field.form-group.text-center
        .input-group
          %span.input-group-addon.glyphicon.glyphicon-envelope
          = f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control'
      .field.form-group.text-center
        .input-group
          %span.input-group-addon.glyphicon.glyphicon-eye-open
          = f.password_field :password, autocomplete: :off, placeholder: t('.password'), class: 'form-control'
      .field.form-group.text-center
        .input-group
          %span.input-group-addon.glyphicon.glyphicon-eye-open
          = f.password_field :password_confirmation, autocomplete: :off, placeholder: t('.password_repeat'), class: 'form-control'
      .actions.form-group.text-center
        = f.submit(class: 'btn btn-default', value: t('.registration'))
    = render 'devise/shared/links'
